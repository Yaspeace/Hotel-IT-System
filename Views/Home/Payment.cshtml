@{
    if (ViewBag.Entered)
        Layout = "~/Views/Shared/_Layout2.cshtml";
    else
        Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.openedView = "booking";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="@Url.Content("~/css/site.css")" />
    <title>Бронирование</title>
</head>
<body>
    <div align="center">
        <form>
            <div class="booking-backgr" style="width: 50%;">
                <div style="padding-top: 1em;" align="center">
                    <font class="lead-black">Данные банковской карты</font>
                </div>
                <div style="width:85%;padding-top: 1em;" align="center">
                    <input type="text" placeholder="Номер карты" style="width:100%;height: 30px;" />
                </div>
                <div style="width:85%;padding-top: 1em;" align="center">
                    <select title="Месяц" style="width: 40%;">
                        <option>01</option>
                        <option>02</option>
                        <option>03</option>
                        <option>04</option>
                        <option>05</option>
                        <option>06</option>
                        <option>07</option>
                        <option>08</option>
                        <option>09</option>
                        <option>10</option>
                        <option>11</option>
                        <option>12</option>
                    </select>
                    <select title="Год" style="width:40%;">
                        <option>2016</option>
                        <option>2017</option>
                        <option>2018</option>
                        <option>2019</option>
                        <option>2020</option>
                        <option>2021</option>
                        <option>2022</option>
                        <option>2023</option>
                    </select>
                </div>
                <div style="width:85%;padding-top: 1em;" align="right">
                    <input type="text" placeholder="CVV" />
                </div>
                <div style="width:85%;padding-top: 1em;" align="center">
                    <a type="button" class="enter-btn" href="/Home/Pay">Оплатить</a>
                    <input type="button" class="enter-btn-cancel" style="margin-left: 1em;" value="Отмена" />
                </div>
            </div>
        </form>
    </div>
</body>
</html>