
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/css/site.css")" rel="stylesheet" />
</head>
<body>
    <header id="head1">
        <div class="flex-layout">
            <div class="flex-block">
                <font class="upmenu-main">Свяжитесь с нами:</font><br><font class="upmenu">8(800)5553535<br>22-33-22<br>lordofthewinds@mail.ru</font>
            </div>
            <div class="flex-block" align="right">
                <font class="upmenu-main">Наш адрес:</font><br><font class="upmenu">Россия, респ. Крым<br>г. Севастополь<br>ул. Ангарская, 18</font>
            </div>
            <div class="flex-block-centered">
                <a href="/Home/Index"><img src="@Url.Content("~/Images/emblem.png")" alt="" /></a>
            </div>
            <div class="menu-emblem">
                <a href="/Home/Chat">
                    <img src="@Url.Content("~/Images/emblem support.png")" alt="" />
